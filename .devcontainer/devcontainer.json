{
    "name": "git-backups-dev-env",
    "build": {
        "dockerfile": "dockerfile",
        "args": {
            "REBUILD_TRIGGER": "2025-10-04",
            "USERNAME": "devuser"
        }
    },
    "remoteUser": "devuser",
    "containerEnv": {
        "SHELL": "/bin/bash",
        "TMP_DIR": "/workspaces/tmp"
    },
    "mounts": [
        "source=.,target=/git-backups,type=bind,consistency=cached"
    ],
    "postCreateCommand": ".devcontainer/post_create.sh",
    "runArgs": [
        "--name",
        "git-backups-dev-env"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go"
            ]
        }
    }
}